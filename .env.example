# Copy this to .env and fill in your keys

# === REQUIRED API KEYS ===
GROQ_API_KEY=gsk_your_groq_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# === OPTIONAL API KEYS ===
TAVILY_API_KEY=tvly_optional_for_advanced_search
OPENAI_API_KEY=sk_optional_for_premium_tts

# === MODEL CONFIGURATION ===
GROQ_MODEL=llama-3.1-70b-versatile
GEMINI_MODEL=gemini-1.5-flash-latest
GROQ_MAX_TOKENS=8000
GEMINI_MAX_TOKENS=8000

# === FEATURE FLAGS ===
ENABLE_WEB_SEARCH=true
ENABLE_STREAMING=true
ENABLE_VOICE_OPTIMIZATION=true
ENABLE_CACHING=true

# === PERFORMANCE ===
REQUEST_TIMEOUT=120
CACHE_TTL=3600
MAX_WORKERS=4

# === REDIS (Optional) ===
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# === LOGGING ===
LOG_LEVEL=INFO
LOG_FORMAT=json